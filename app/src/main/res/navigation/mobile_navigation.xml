<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.arulvakku.lyrics.app.ui.view.fragments.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/home_fragment">

        <action
            android:id="@+id/action_category_to_song_list"
            app:destination="@id/navigation_songs_list"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.arulvakku.lyrics.app.ui.view.fragments.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/search_fragment" />

    <fragment
        android:id="@+id/navigation_library"
        android:name="com.arulvakku.lyrics.app.ui.view.fragments.LibraryFragment"
        android:label="LibraryFragment"
        tools:layout="@layout/library_fragment" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.arulvakku.lyrics.app.ui.view.fragments.SettingFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/setting_fragment" />

    <fragment
        android:id="@+id/navigation_songs_list"
        android:name="com.arulvakku.lyrics.app.ui.view.fragments.SongListFragment"
        android:label="SongList"
        tools:layout="@layout/song_list_fragment" >
        <argument
            android:name="categoriesresult"
            app:argType="com.arulvakku.lyrics.app.data.model.CategoriesResult" />
    </fragment>

</navigation>