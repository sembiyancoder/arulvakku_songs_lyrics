<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arulvakku.lyrics.app">

    <application
        android:configChanges="fontScale"
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:configChanges="uiMode"
            android:screenOrientation="portrait"
            android:name=".activities.home.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/MainActivityTheme" />

        <activity
            android:screenOrientation="portrait"
            android:name=".activities.search.SongSearchActivity"
            android:parentActivityName=".MainActivity" />

        <activity
            android:theme="@style/AppTheme"
            android:configChanges="uiMode"
            android:screenOrientation="portrait"
            android:name=".activities.category.SongTitlesActivity"
            android:parentActivityName=".activities.home.HomeActivity" />

        <activity
            android:screenOrientation="portrait"
            android:name=".activities.BaseActivity" />

        <activity
            android:screenOrientation="portrait"
            android:name=".activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <activity
            android:configChanges="uiMode"
            android:screenOrientation="portrait"
            android:label="எங்களை பற்றி"
            android:theme="@style/AppTheme"
            android:parentActivityName=".activities.home.HomeActivity"
            android:name=".activities.AboutActivity" />

        <activity
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"
            android:label="அமைப்புகள்"
            android:parentActivityName=".activities.home.HomeActivity"
            android:name=".activities.SettingsActivity"/>

        <activity
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"
            android:name=".activities.lyrics.LyricsScreenActivity"
            android:parentActivityName=".activities.home.HomeActivity" />
    </application>

</manifest>